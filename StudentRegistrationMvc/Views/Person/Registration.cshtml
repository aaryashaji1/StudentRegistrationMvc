@model StudentRegistrationMvc.Models.Person
@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>
@using (Html.BeginForm("Registration1", "Person"))
{
<label>Name</label>@Html.TextBoxFor(m => m.Name)
<br />
<label>Gender</label>
<label>Male</label>@Html.RadioButtonFor(m => m.Gender, "Male")
<label>Female</label>@Html.RadioButtonFor(m => m.Gender, "Female")<br/>
<label>Education</label>@Html.DropDownListFor(m => m.Education, new List<SelectListItem>
     {
        new SelectListItem{Text="Ug",Value="Ug"},
        new SelectListItem{Text="Pg",Value="Pg"},
        new SelectListItem{Text="+2",Value="+2"},
        new SelectListItem{Text="10",Value="10"},
        }, "SelectItem");<br/>
<input type="submit" value="submit"/>

}
